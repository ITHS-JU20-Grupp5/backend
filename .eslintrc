{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "global-require": "off",
    "import/no-dynamic-require": "off",
    "no-console": "off",
    "no-plusplus": "off",
    "no-param-reassign": "off"
  },
  "env": {
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  }
}
